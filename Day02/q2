area and circumference of circle
#include <stdio.h>
int area(int r, float pi) {
        float x=pi*r*r;
        printf("Area of circle is : %f\n",x);
        return x;
}
int circumference(int r, float pi) {
        float y=2*pi*r;
        printf("Circumference of circle is : %f",y);
        return y;
}
int main(int argc, char *argv[]) {
        float pi=3.14159;
        int r;
        printf("Enter radius : ");
        scanf("%d",&r);
        area(r,pi);
        circumference(r,pi);
        return 0;
}
